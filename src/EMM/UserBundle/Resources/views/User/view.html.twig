{% extends 'layout.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="container well">
        <div class="col-md-9">
            <h2>{{ user.firstname }} {{ user.lastname }}</h2>
            <dl>
                <dt>Username:</dt>
                <dd>{{ user.username }}</dd>
                <dt>Firstname:</dt>
                <dd>{{ user.firstName }}</dd>
                <dt>Lastname:</dt>
                <dd>{{ user.lastName }}</dd>
                <dt>Email:</dt>
                <dd>{{ user.email }}</dd>
                <dt>Active:</dt>
                <dd>
                    {% if user.isActive == 1 %}
                        <span class="text-success">Enabled</span>
                    {% elseif user.isActive == 0 %}
                        <span class="text-warning">Disabled</span>
                    {% endif %}
                </dd>
                <dt>Created:</dt>
                <dd>{{ user.createdAt|date('d-m-Y H:i') }}</dd>
                <dt>Updated:</dt>
                <dd>{{ user.createdAt|date('d-m-Y H:i') }}</dd>
            </dl>
        </div>
        <div class="col-md-3">
            <h3>Actions</h3>
            <p>
                <a href="{{ path('emm_user_edit', { id: user.id}) }}" class="btn btn-primary btn-primary btn-lg">
                    <span class="glyphicon glyphicon-edit"></span>
                    Edit User
                </a>
            </p>
            {#<p>
                {{ include('EMMUserBundle:User:forms/form.html.twig', {form: delete_from, message: 'Are you sure?'}) }}
            </p>#}
        </div>
    </div>
{% endblock %}